{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C: build and run",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p output && gcc -g ${file} -o output/${fileBasenameNoExtension} && ./output/${fileBasenameNoExtension}"
            ],
            "options": { "cwd": "${workspaceFolder}" },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "clear": true
            },
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": ["$gcc"]
        }
    ]
}
